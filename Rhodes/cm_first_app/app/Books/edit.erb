<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @books.name %></h1>
    <a href="<%= url_for :action => :show, :id => @books.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @books.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @books.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="books[name]" class="fieldLabel">Name</label>
            <input type="text" id="books[name]" name="books[name]" value="<%= @books.name %>" <%= placeholder( "Name" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="books[author]" class="fieldLabel">Author</label>
            <input type="text" id="books[author]" name="books[author]" value="<%= @books.author %>" <%= placeholder( "Author" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="books[date]" class="fieldLabel">Date</label>
            <input type="text" id="books[date]" name="books[date]" value="<%= @books.date %>" <%= placeholder( "Date" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
