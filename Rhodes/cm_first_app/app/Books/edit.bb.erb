<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @books.object %>
    <h1>Edit <%= @books.name%></h1>
    <%= link_to "Delete", :action => :delete, :id => @books.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @books.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Name: </td>
              <td class="itemValue"><input type="text" name="books[name]" value="<%= @books.name %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Author: </td>
              <td class="itemValue"><input type="text" name="books[author]" value="<%= @books.author %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Date: </td>
              <td class="itemValue"><input type="text" name="books[date]" value="<%= @books.date %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
