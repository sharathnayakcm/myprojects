<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @twitter.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @twitter.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="twitter[name]" class="fieldLabel">Name</label>
            <input type="text" id="twitter[name]" name="twitter[name]" <%= placeholder("Name") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="twitter[per_page]" class="fieldLabel">Per page</label>
            <input type="text" id="twitter[per_page]" name="twitter[per_page]" <%= placeholder("Per page") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
