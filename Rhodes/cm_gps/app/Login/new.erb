<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @login.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :controller=>:User,:action => :new %>" class="ui-btn-right" data-icon="plus">
      New
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @login.object %>"/>


      <div data-role="fieldcontain">
        <label for="login[username]" class="fieldLabel">Username</label>
        <input type="text" id="login[username]" name="login[username]" <%= placeholder("Username") %> />
      </div>

      <div data-role="fieldcontain">
        <label for="login[password]" class="fieldLabel">Password</label>
        <input type="text" id="login[password]" name="login[password]" <%= placeholder("Password") %> />
      </div>


      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
