<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @login.username %></h1>
    <a href="<%= url_for :action => :show, :id => @login.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @login.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @login.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="login[username]" class="fieldLabel">Username</label>
            <input type="text" id="login[username]" name="login[username]" value="<%= @login.username %>" <%= placeholder( "Username" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="login[password]" class="fieldLabel">Password</label>
            <input type="text" id="login[password]" name="login[password]" value="<%= @login.password %>" <%= placeholder( "Password" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
