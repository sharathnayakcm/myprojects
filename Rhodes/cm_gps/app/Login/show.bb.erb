  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1><%= @login.username %></h1>
    <%= link_to "Edit", :action => :edit, :id => @login.object %>
  </div>

  <div data-role="content">
    <table>
      
      <tr>
    	<td class="itemLabel">Username</td>
        <td class="itemValue"><%= @login.username%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Password</td>
        <td class="itemValue"><%= @login.password%></td>
      </tr>
      
    </table>
  </div>

</div>
