<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New User</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @user.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Name: </td>
                <td class="itemValue"><input type="text" name="user[name]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Password: </td>
                <td class="itemValue"><input type="text" name="user[password]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Hometown: </td>
                <td class="itemValue"><input type="text" name="user[hometown]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Current loc: </td>
                <td class="itemValue"><input type="text" name="user[current_loc]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Long: </td>
                <td class="itemValue"><input type="text" name="user[long]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Lat: </td>
                <td class="itemValue"><input type="text" name="user[lat]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
