<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @user.object %>
    <h1>Edit <%= @user.name%></h1>
    <%= link_to "Delete", :action => :delete, :id => @user.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @user.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Name: </td>
              <td class="itemValue"><input type="text" name="user[name]" value="<%= @user.name %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Password: </td>
              <td class="itemValue"><input type="text" name="user[password]" value="<%= @user.password %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Hometown: </td>
              <td class="itemValue"><input type="text" name="user[hometown]" value="<%= @user.hometown %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Current loc: </td>
              <td class="itemValue"><input type="text" name="user[current_loc]" value="<%= @user.current_loc %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Long: </td>
              <td class="itemValue"><input type="text" name="user[long]" value="<%= @user.long %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Lat: </td>
              <td class="itemValue"><input type="text" name="user[lat]" value="<%= @user.lat %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
