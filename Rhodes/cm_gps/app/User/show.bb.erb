<div data-role="page" data-add-back-btn="true">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1><%= @user.name %></h1>
    <%= link_to "Edit", :action => :edit, :id => @user.object %>
  </div>

  <div data-role="content">
    <table>
      
      <tr>
    	<td class="itemLabel">Name</td>
        <td class="itemValue"><%= @user.name%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Password</td>
        <td class="itemValue"><%= @user.password%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Hometown</td>
        <td class="itemValue"><%= @user.hometown%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">CurrentLoc</td>
        <td class="itemValue"><%= @user.current_loc%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Long</td>
        <td class="itemValue"><%= @user.long%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Lat</td>
        <td class="itemValue"><%= @user.lat%></td>
      </tr>
      
    </table>
  </div>

</div>
