<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @books.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @books.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="books[name]" class="fieldLabel">Name</label>
            <input type="text" id="books[name]" name="books[name]" <%= placeholder("Name") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="books[author]" class="fieldLabel">Author</label>
            <input type="text" id="books[author]" name="books[author]" <%= placeholder("Author") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="books[price]" class="fieldLabel">Price</label>
            <input type="text" id="books[price]" name="books[price]" <%= placeholder("Price") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
