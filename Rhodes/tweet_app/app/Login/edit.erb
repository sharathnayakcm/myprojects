<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit Profile<%= @user_info['first_name'] %></h1>
    <a href="<%= url_for :action => :user_info, :id => @user_info['id'], :query => {:goto => 'index'} %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <div data-role="fieldcontain">
        <div class="errorMessage"></div>
      </div>
      <div data-role="fieldcontain">
        <input type="hidden" id="login[id]" name="login[id]" value="<%= @user_info['id'] %>" />
      </div>
      <div data-role="fieldcontain">
        <label for="login[first_name]" class="fieldLabel">First name</label>
        <input type="text" id="first_name" name="login[first_name]" value="<%= @user_info['first_name'] %>" <%= placeholder( "First name" ) %> />
      </div>

      <div data-role="fieldcontain">
        <label for="login[last_name]" class="fieldLabel">Last name</label>
        <input type="text" id="last_name" name="login[last_name]" value="<%= @user_info['last_name'] %>" <%= placeholder( "Last name" ) %> />
      </div>

      <div data-role="fieldcontain">
        <label for="login[email]" class="fieldLabel">Email</label>
        <input type="text" id="email" name="login[email]" value="<%= @user_info['email'] %>" <%= placeholder( "Email" ) %> />
      </div>

      <div data-role="fieldcontain">
        <label for="login[password]" class="fieldLabel">Password</label>
        <input type="text" id="password" name="login[password]" value="<%= @user_info['password'] %>" <%= placeholder( "Password" ) %> />
      </div>
      
      <input type="submit" value="Update" onclick="return validate_profile();"/>
    </form>
  </div>

</div>
