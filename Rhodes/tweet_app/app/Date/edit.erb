<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @date.date %></h1>
    <a href="<%= url_for :action => :show, :id => @date.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @date.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @date.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="date[date]" class="fieldLabel">Date</label>
            <input type="text" id="date[date]" name="date[date]" value="<%= @date.date %>" <%= placeholder( "Date" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="date[time]" class="fieldLabel">Time</label>
            <input type="text" id="date[time]" name="date[time]" value="<%= @date.time %>" <%= placeholder( "Time" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
