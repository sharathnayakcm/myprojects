<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @datetime.object %>
    <h1>Edit <%= @datetime.date%></h1>
    <%= link_to "Delete", :action => :delete, :id => @datetime.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @datetime.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Date: </td>
              <td class="itemValue"><input type="text" name="datetime[date]" value="<%= @datetime.date %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Time: </td>
              <td class="itemValue"><input type="text" name="datetime[time]" value="<%= @datetime.time %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
