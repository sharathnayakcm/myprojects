<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @datetime.date %></h1>
    <a href="<%= url_for :action => :show, :id => @datetime.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @datetime.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @datetime.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="datetime[date]" class="fieldLabel">Date</label>
            <input type="text" id="datetime[date]" name="datetime[date]" value="<%= @datetime.date %>" <%= placeholder( "Date" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="datetime[time]" class="fieldLabel">Time</label>
            <input type="text" id="datetime[time]" name="datetime[time]" value="<%= @datetime.time %>" <%= placeholder( "Time" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
