<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @datetime.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @datetime.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="datetime[date]" class="fieldLabel">Date</label>
            <input type="text" id="datetime[date]" name="datetime[date]" <%= placeholder("Date") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="datetime[time]" class="fieldLabel">Time</label>
            <input type="text" id="datetime[time]" name="datetime[time]" <%= placeholder("Time") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
