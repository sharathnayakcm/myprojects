<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Tweets</h1>
    <a href="<%= url_for :controller => :Login, :action => :user_info, :id => @user_id, :query => {:goto => 'index'} %>" class="ui-btn-left" data-icon="home" data-direction="reverse" <%= "data-ajax='false'" if is_bb6 %>>
      Home
    </a>
    <a href="<%= url_for :action => :new, :query => {:user_id => @user_id} %>" class="ui-btn-right" data-icon="plus">
      New
    </a>
   
  </div>

  <div data-role="content">
    <ul data-role="listview">
      <% @tweets.each do |tweet| %>

        <li>
          <a href="<%= url_for :action => :get_tweet, :id => tweet['tweet']['id'], :query => {:user_id => @user_id} %>">
            <%= tweet['tweet']['tweet'] %>
          </a>
        </li>

      <% end %>
    </ul>
  </div>

</div>
