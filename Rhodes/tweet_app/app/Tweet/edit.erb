<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @tweet.message %></h1>
    <a href="<%= url_for :action => :show, :id => @tweet.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @tweet.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @tweet.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="tweet[message]" class="fieldLabel">Message</label>
            <input type="text" id="tweet[message]" name="tweet[message]" value="<%= @tweet.message %>" <%= placeholder( "Message" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
