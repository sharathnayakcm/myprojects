<div data-role="page">

  <div data-role="header" data-position="inline">Users List</div>
  <div data-role="content">
    <ul data-role="listview">
      <% @users.each do |user| %>
        <li>
          <a href="<%= url_for :action => :follow_user, :id => user['user']['id'] ,:query => {:following_user => @user_id}%>">
            <%= user['user']['login'] %>-->> Follow this User
          </a>
        </li>

      <% end %>
    </ul>
  </div>


</div>
